@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Inherit" Link="https://mudblazor.com/" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/MudBlazor/MudBlazor/" Target="_blank" />
    </MudAppBar>
    <MudDrawer id="navbar" @bind-Open="_drawerOpen" Elevation="1" Width="450px" Height="100%" style="align-items: center; justify-content: center;">
        <MudDrawerHeader style="align-items: center; justify-content: center;">
            <MudText Style="font-size: 400%" Typo="Typo.h6">GCM</MudText>
        </MudDrawerHeader>
        <NavMenu />
        <DesignCircles />
    </MudDrawer>

    <MudMainContent id="main">
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

}